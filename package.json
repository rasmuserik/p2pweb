{
  "name": "p2pweb",
  "version": "0.0.3",
  "description": "",
  "main": "p2pweb.js",
  "scripts": {
    "prettier": "prettier --write p2pweb.js --print-width 72 && git add p2pweb.js",
    "dev": "./dev.sh",
    "docs/jsdoc": "documentation build p2pweb.js -f html -o docs/jsdoc; git add docs/jsdoc",
    "pandoc-readme": "pandoc pandoc/README.yml pandoc/template.yml README.md --template=pandoc/template.html -s -o docs/index.html",
    "test": "P2PWEB_URL=ws://localhost:3535 RUN_TESTS=true istanbul cover p2pweb.js",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "git-add": "git add README.md p2pweb.js"
  },
  "pre-commit": [
    "prettier",
    "test",
    "pandoc-readme",
    "docs/jsdoc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solsort/p2pweb.git"
  },
  "author": "RasmusErik Voel Jensen <npmjs@solsort.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/solsort/p2pweb/issues"
  },
  "homepage": "https://p2pweb.solsort.com/",
  "dependencies": {
    "ws": "^2.2.0"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "documentation": "^5.3.1",
    "istanbul": "^1.1.0-alpha.1",
    "live-server": "^1.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.6.1"
  }
}
